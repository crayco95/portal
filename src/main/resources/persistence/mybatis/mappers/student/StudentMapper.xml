<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.portal.dao.StudentMapper">

    
    <select id="findAll" resultType="Student">
        SELECT id, name, grade, email
		FROM student
    </select>
    
    <select id="getStudent" parameterType="int" resultType="Student">
	  SELECT * FROM student WHERE id = #{id}
	</select>
	
	<insert id="insertStudent" useGeneratedKeys="true"
	    keyProperty="id" parameterType="Student">
	  insert into student (name,grade,email)
	  values (#{name},#{grade},#{email});
	</insert>
	
	<update id="updateStudent">
	  update student set
	    name = #{name},
	    grade = #{grade},
	    email = #{email}
	  where id = #{id}
	</update>
	
	<delete id="deleteStudent" parameterType="int">
	  delete from student where id = #{id}
	</delete>
	
</mapper>